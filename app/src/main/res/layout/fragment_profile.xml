<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flyppcorp.profile.ProfileFragment"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgManagerProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_select_photo_profile"
                android:src="@drawable/ic_person"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtManagerNome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgManagerProfile" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_location_profile"
                android:text="Endereço:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/txtManagerNome"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtManagerNome"
                app:layout_constraintTop_toBottomOf="@+id/btnLink" />

            <TextView
                android:id="@+id/txtMAnagerEnderecoProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/textView42"
                app:layout_constraintStart_toStartOf="@+id/textView42"
                app:layout_constraintTop_toBottomOf="@+id/textView42" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_call"
                android:text="Contatos:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtMAnagerEnderecoProfile"
                app:layout_constraintStart_toStartOf="@+id/txtMAnagerEnderecoProfile"
                app:layout_constraintTop_toBottomOf="@+id/txtMAnagerEnderecoProfile" />

            <TextView
                android:id="@+id/txtContatosManagerProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/textView44"
                app:layout_constraintStart_toStartOf="@+id/textView44"
                app:layout_constraintTop_toBottomOf="@+id/textView44" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Pratos do estabelecimento"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtContatosManagerProfile"
                app:layout_constraintStart_toStartOf="@+id/txtContatosManagerProfile"
                app:layout_constraintTop_toBottomOf="@+id/txtContatosManagerProfile" />

            <TextView
                android:id="@+id/txtAtivoProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_service_info"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/textIcons"
                android:textSize="24sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView41" />

            <TextView
                android:id="@+id/txtAvaliacaoProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_service_info"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/textIcons"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView41" />

            <TextView
                android:id="@+id/txtFinalizadoProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_service_info"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/textIcons"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/textView41"
                app:layout_constraintStart_toStartOf="@+id/textView41"
                app:layout_constraintTop_toBottomOf="@+id/textView41" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ativos"
                app:layout_constraintEnd_toEndOf="@+id/txtAtivoProfile"
                app:layout_constraintStart_toStartOf="@+id/txtAtivoProfile"
                app:layout_constraintTop_toBottomOf="@+id/txtAtivoProfile" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Finalizados"
                app:layout_constraintEnd_toEndOf="@+id/txtFinalizadoProfile"
                app:layout_constraintStart_toStartOf="@+id/txtFinalizadoProfile"
                app:layout_constraintTop_toBottomOf="@+id/txtFinalizadoProfile" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Avaliação"
                app:layout_constraintEnd_toEndOf="@+id/txtAvaliacaoProfile"
                app:layout_constraintStart_toStartOf="@+id/txtAvaliacaoProfile"
                app:layout_constraintTop_toBottomOf="@+id/txtAvaliacaoProfile" />

            <Button
                android:id="@+id/btnEditProfileGo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/button_bg"
                android:text="Editar Perfil"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="@+id/txtManagerNome"
                app:layout_constraintStart_toStartOf="@+id/txtManagerNome"
                app:layout_constraintTop_toBottomOf="@+id/txtManagerNome" />

            <Button
                android:id="@+id/btnLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_bg"
                android:drawableEnd="@drawable/ic_share"
                android:paddingRight="10px"
                android:text="Compartilhar meu Negócio"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="@+id/btnEditProfileGo"
                app:layout_constraintStart_toStartOf="@+id/btnEditProfileGo"
                app:layout_constraintTop_toBottomOf="@+id/btnEditProfileGo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>
