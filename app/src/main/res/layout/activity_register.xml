<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editEmailCadLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/e_mail"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editEmailCad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/textIcons" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editSenhaCadLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/senha"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="@+id/editEmailCadLayout"
        app:layout_constraintStart_toStartOf="@+id/editEmailCadLayout"
        app:layout_constraintTop_toBottomOf="@+id/editEmailCadLayout"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/textIcons">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editSenhaCad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/textIcons" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editSenhaConfirmCadLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/confirmar_senha"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="@+id/editSenhaCadLayout"
        app:layout_constraintStart_toStartOf="@+id/editSenhaCadLayout"
        app:layout_constraintTop_toBottomOf="@+id/editSenhaCadLayout"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/textIcons">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editSenhaConfirmCad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/textIcons" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnCad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_bg"
        android:text="@string/criar_conta"
        android:textColor="@color/textIcons"
        app:layout_constraintEnd_toEndOf="@+id/editSenhaConfirmCadLayout"
        app:layout_constraintStart_toStartOf="@+id/editSenhaConfirmCadLayout"
        app:layout_constraintTop_toBottomOf="@+id/editSenhaConfirmCadLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>